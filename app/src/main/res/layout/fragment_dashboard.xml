<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtdashbord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dashboardfragment"
        android:textSize="10sp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/img_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtdashbord"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-71dp"
        android:layout_marginBottom="-9dp"
        android:src="@drawable/mobile_banner1" />

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/grid_product_layout"
        android:id="@+id/RecyclerDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_banner"
        android:layout_alignParentBottom="true">

    </androidx.recyclerview.widget.RecyclerView>




</RelativeLayout>